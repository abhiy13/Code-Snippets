	<content><![CDATA[

struct trieNode{
	trieNode *node[26];
	bool end;
	trieNode(){
		for(int i = 0 ; i < 26 ; i++){
		 node[i] = nullptr;
		}
		end = false;
	}
};

class Trie{
public:
	trieNode *root , *temp;
	int ans;
	Trie(){
		root = new trieNode;
		ans = 0;
	}
	void add(string s){
		temp = root;
		for(auto &c : s){
			if(temp->node[c - 'a'] == nullptr){
				temp->node[c - 'a'] = new trieNode;
			}
			temp = temp->node[c - 'a'];
		}
		temp->end = true;
	}

	void count(trieNode *rot){
		if(rot->end) ans++;
		for(int i = 0 ; i < 26 ; ++i){
			if(rot->node[i] != nullptr){
				count(rot->node[i]);
			}	
		}
	}

	int query(string s){
		temp = root;
		for(auto &c : s){
			if(temp->node[c - 'a'] == nullptr) return 0;
			temp = temp->node[c - 'a'];
		}
		ans = 0;
		count(temp);
		return ans;
	}
};

]]></content>
